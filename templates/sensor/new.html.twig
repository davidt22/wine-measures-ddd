{% extends 'base.html.twig' %}

{% block title %}Sensor{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <h1>Nuevo sensor</h1>

    <div class="row">
        <div class="col"></div>
        <div class="col">
            <p>
                {{ form_label(form.typeId) }}
                {{ form_widget(form.typeId) }}
            </p>
        </div>
        <div class="col">
            <p>
                {{ form_label(form.value) }}
                {{ form_widget(form.value) }}
            </p>

        </div>
        <div class="col"></div>
    </div>

    <p class="text-center">
        <input type="submit" value="Enviar" class="btn btn-success">
    </p>

    {{ form_end(form) }}

    <p class="text-center">
        <a href="{{ path('homepage') }}">Home</a>
    </p>
{% endblock %}
